<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:backgroundTint="#a3caeb"
    android:clipToOutline="true"
    android:background="@drawable/bg_rounded_corner">

    <!-- TextView hiển thị tiêu đề chương -->
    <TextView
        android:id="@+id/txt_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiêu đề chương"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- TextView hiển thị tên tác giả -->
    <TextView
        android:id="@+id/txt_chapter_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tác giả"
        android:textSize="15sp"
        android:textColor="#757575"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_chapter_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- TextView hiển thị thể loại chương -->
    <TextView
        android:id="@+id/txt_chapter_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thể loại"
        android:textSize="15sp"
        android:textColor="#757575"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_chapter_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Thanh phân cách -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        app:layout_constraintTop_toBottomOf="@id/txt_chapter_genre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
